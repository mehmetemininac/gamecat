<% title "Containers" %>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>
  <% for container in @containers %>
    <tr>
      <td><%=h container.name %></td>
      <td><%=h container.description.size > 100 ? container.description[0..95] + '[...]' : container.description %></td>
      <%= common_links :section => :list, :object => container %>
    </tr>
  <% end %>
</table>
<%= common_links :section => :main, :klass => Container %>
