<h1>Listing gamecategories</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Shortname</th>
  </tr>

<% @gamecategories.each do |gamecategory| %>
  <tr>
    <td><%=h gamecategory.name %></td>
    <td><%=h gamecategory.shortname %></td>
    <td><%= link_to 'Show', gamecategory %></td>
    <td><%= link_to 'Edit', edit_gamecategory_path(gamecategory) %></td>
    <td><%= link_to 'Destroy', gamecategory, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New gamecategory', new_gamecategory_path %>